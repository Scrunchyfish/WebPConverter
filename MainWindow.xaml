<Window x:Class="WebPConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image to WebP Converter" Height="650" Width="900"
        AllowDrop="True" DragOver="Window_DragOver" Drop="Window_Drop" 
        Background="#1E1E1E" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Background" Value="#2D7DD2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3D8DE2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1C6CC2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="Padding" Value="8,5"/>
        </Style>

        <Style TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#2D7DD2"/>
        </Style>
    </Window.Resources>

    <Border Padding="30" Background="#252525" CornerRadius="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="IMAGE TO WEBP CONVERTER" 
                       FontSize="28" 
                       FontWeight="Light" 
                       Foreground="#2D7DD2" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>
                <TextBlock Text="Drag and drop images or use the button below" 
                       FontSize="14" 
                       Foreground="#999999" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
                <Separator Background="#333333" Margin="100,10"/>
            </StackPanel>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <Grid Grid.Column="0" Margin="0,0,20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- File Actions -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Content="Add Images" 
                                Click="PickImages_Click" 
                                Grid.Column="0"
                                Width="120"/>

                        <Button Content="Clear All" 
                                Click="ClearAll_Click"
                                Grid.Column="1"
                                Width="100"
                                Background="#555555"
                                HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- File List -->
                    <Border Grid.Row="1" 
                            Background="#1A1A1A" 
                            BorderBrush="#333333" 
                            BorderThickness="1" 
                            CornerRadius="4"
                            Padding="1">
                        <ListBox x:Name="fileList" 
                                 SelectionChanged="fileList_SelectionChanged"
                                 BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding}" 
                                                   VerticalAlignment="Center" 
                                                   Margin="5"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <Button Content="✕" 
                                                Grid.Column="1"
                                                Click="RemoveButton_Click"
                                                Width="28" Height="28"
                                                Padding="0"
                                                Background="#D32F2F"
                                                ToolTip="Remove"/>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <!-- Output Folder Selection -->
                    <Grid Grid.Row="2" Margin="0,15,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="OUTPUT FOLDER" 
                                   Foreground="#999999" 
                                   FontSize="12" 
                                   Margin="0,0,0,5"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="txtOutputFolder" 
                                     Grid.Column="0"
                                     IsReadOnly="True"/>

                            <Button Content="Browse" 
                                    Click="SelectOutputFolder_Click" 
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    Width="80"/>

                            <Button Content="Open" 
                                    Click="OpenOutputFolder_Click"
                                    Grid.Column="2"
                                    Margin="10,0,0,0"
                                    Width="80"
                                    Background="#555555"/>
                        </Grid>
                    </Grid>
                </Grid>

                <!-- Right Column -->
                <Grid Grid.Column="1" Width="200">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Preview Section -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="PREVIEW" 
                                   Foreground="#999999" 
                                   FontSize="12" 
                                   Margin="0,0,0,10"/>

                        <Border Background="#1A1A1A" 
                                BorderBrush="#333333" 
                                BorderThickness="1" 
                                CornerRadius="4">
                            <Image x:Name="previewImage" 
                                   Height="150" 
                                   Width="180"
                                   Stretch="Uniform"
                                   Margin="10"/>
                        </Border>
                    </StackPanel>

                    <!-- Settings -->
                    <StackPanel Grid.Row="1" Margin="0,20,0,0">
                        <TextBlock Text="SETTINGS" 
                                   Foreground="#999999" 
                                   FontSize="12" 
                                   Margin="0,0,0,15"/>

                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Quality" 
                                       Foreground="White" 
                                       Margin="0,0,0,5"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Slider x:Name="qualitySlider" 
                                        Minimum="1" 
                                        Maximum="100" 
                                        Value="80"
                                        Grid.Column="0"/>

                                <Border Background="#2D7DD2" 
                                        CornerRadius="3" 
                                        Padding="8,4" 
                                        Grid.Column="1" 
                                        Margin="10,0,0,0">
                                    <TextBlock x:Name="lblQuality" 
                                               Text="80" 
                                               Foreground="White" 
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               Width="25"
                                               TextAlignment="Center"/>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </StackPanel>

                    <!-- Convert Button -->
                    <StackPanel Grid.Row="2">
                        <Button x:Name="btnConvert"
                                Content="CONVERT TO WEBP" 
                                Click="Convert_Click"
                                Background="#4CAF50"
                                Height="50"
                                FontWeight="Bold"/>

                        <ProgressBar x:Name="progressBar" 
                                     Margin="0,15,0,5" 
                                     Visibility="Collapsed"/>

                        <TextBlock x:Name="lblStatus" 
                                   Foreground="#999999" 
                                   FontSize="12"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Footer -->
            <TextBlock Grid.Row="2" 
                       Text="Drop images anywhere to add them" 
                       Foreground="#666666" 
                       FontSize="12" 
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>
        </Grid>
    </Border>
</Window>